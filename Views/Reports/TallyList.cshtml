@model List<KeyValuePair<string, int>>

@{
    ViewData["Title"] = "Tally List";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-3">
            <p>
                <a class="btn btn-primary btn-sm" asp-action="Index"><i class="fas fa-undo-alt"></i> Back to Reports</a>
            </p>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <thead>
            <tr>
                <th>
                    Position
                </th>
                <th>
                    Countries
                </th>
                <th>
                    Medals
                </th>
            </tr>
            </thead>
            <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @(i + 1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].Key)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].Value)
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>